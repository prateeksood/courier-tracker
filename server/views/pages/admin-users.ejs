<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header');%>
<body>
    <div class="container">
        <%- include('../partials/nav',{activeNav:"admin"});%>
        <div class="main-content-admin">
            <%- include('../partials/side-bar.ejs',{
                activeTab:locals.activeTab?locals.activeTab:"users",
                user:locals.user?locals.user:null,
                menuTabs:[
                    {
                        icon:"fa fa-user",
                        value:"Users",
                        key:"users",
                        url:"/admin/users",
                    },
                    {
                        icon:"fa fa-archive",
                        value:"Couriers",
                        key:"couriers",
                        url:"/admin/couriers",
                    },
                    {
                        icon:"fa fa-database",
                        value:"Database",
                        key:"database",
                        url:"/admin/database",
                    }
                ]
            }) 
            %> 
            <div class="right-section">
                <div class="right-top-bar"></div>
                <div class="content-holder">
                    <div class="search-box-holder">
                        <div class="search-holder">
                            <input type="text" name="serach" id="search" placeholder="Tracking id / Mobile Number / Email">
                            <button>Track</button>
                        </div>
                    </div>
                    <div class="search-results">
                        <div class="table">
                            <div class="table-header">
                                <div class="cell">Id</div>
                                <div class="cell">Name</div>
                                <div class="cell">Email</div>
                                <div class="cell">Contact Number</div>
                                <div class="cell">Actions</div>
                            </div>
                            <%allUsers?.forEach(user=>{%>

                                <div class="table-row">
                                    <div class="cell"><%=user.id%></div>
                                    <div class="cell"><%=user.name%></div>
                                    <div class="cell"><%=user.email%></div>
                                    <div class="cell"><%=user.contactNumber%></div>
                                    <div class="cell">
                                        <a href="#"><i class="fa fa-search"></i></a>
                                        <a href="#"><i class="fa fa-pencil"></i></a>
                                        <a href="#"><i class="fa fa-trash"></i></a>
                                    </div>
                                </div>

                            <%})%>
                            
                            
                            
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <%- include('../partials/footer');%>
    </div>
    <%- include('../partials/scripts');%>
</body>
</html>